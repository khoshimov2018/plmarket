# Polymarket Esports Arbitrage Bot Configuration
# =============================================
# Copy this file to .env and fill in your values

# ===================
# POLYMARKET CONFIG
# ===================
# Your Ethereum private key (with 0x prefix)
POLYMARKET_PRIVATE_KEY=0x...

# Polymarket API credentials (get from app.polymarket.com)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=

# Chain ID: 137 for Polygon Mainnet
CHAIN_ID=137

# ===================
# ESPORTS DATA SOURCES
# ===================
# PandaScore API (https://pandascore.co) - Primary source for esports data
PANDASCORE_API_KEY=

# GRID API (https://grid.gg) - Alternative esports data provider
GRID_API_KEY=

# OpenDota API (https://www.opendota.com/api-keys) - Free Dota 2 data with higher rate limits
OPENDOTA_API_KEY=

# Stratz API for Dota 2 (https://stratz.com/api)
STRATZ_API_KEY=

# ===================
# CRYPTO DATA SOURCES
# ===================
# Binance API (https://www.binance.com/en/my/settings/api-management)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Crypto pairs to monitor (comma-separated)
CRYPTO_PAIRS=BTCUSDT,ETHUSDT,SOLUSDT

# Enable crypto arbitrage module
ENABLE_CRYPTO=true

# ===================
# TRADING PARAMETERS
# ===================
# Initial capital in USDC
INITIAL_CAPITAL=900

# Maximum position size as percentage of capital (0.0 to 1.0)
MAX_POSITION_SIZE_PCT=0.1

# Minimum edge required to enter a trade (e.g., 0.02 = 2%)
MIN_EDGE_THRESHOLD=0.02

# Maximum slippage tolerance (e.g., 0.01 = 1%)
MAX_SLIPPAGE=0.01

# Stop loss percentage (e.g., 0.05 = 5% loss)
STOP_LOSS_PCT=0.05

# Take profit percentage (e.g., 0.10 = 10% gain)  
TAKE_PROFIT_PCT=0.10

# Maximum number of concurrent positions
MAX_CONCURRENT_POSITIONS=5

# ===================
# RISK MANAGEMENT
# ===================
# Daily loss limit as percentage of capital
DAILY_LOSS_LIMIT_PCT=0.15

# Maximum drawdown before halting
MAX_DRAWDOWN_PCT=0.25

# Cooldown period after losing trade (seconds)
LOSS_COOLDOWN_SECONDS=30

# ===================
# EXECUTION CONFIG
# ===================
# Order execution delay to avoid detection (milliseconds)
MIN_EXECUTION_DELAY_MS=50
MAX_EXECUTION_DELAY_MS=200

# Price check interval (milliseconds)
PRICE_CHECK_INTERVAL_MS=500

# Game state poll interval (milliseconds)
GAME_STATE_POLL_INTERVAL_MS=100

# ===================
# MONITORING
# ===================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable trade notifications (Discord/Telegram)
ENABLE_NOTIFICATIONS=false

# Discord webhook URL for notifications
DISCORD_WEBHOOK_URL=

# Telegram bot token and chat ID
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ===================
# DATABASE
# ===================
# SQLite database path
DATABASE_PATH=./data/trades.db

# ===================
# DEVELOPMENT
# ===================
# Enable paper trading mode (no real trades)
PAPER_TRADING=true

# Enable debug mode
DEBUG_MODE=false




